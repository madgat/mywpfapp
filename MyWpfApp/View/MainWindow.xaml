<Window x:Class="MyApp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Refresh" Width="150" Height="30" HorizontalAlignment="Right" VerticalContentAlignment="Center" Grid.Row="0" Style="{StaticResource MyButton}"/>
        <DataGrid Grid.Row="1" Name="dgEmployees" ItemsSource="{Binding Employees}"></DataGrid>
    </Grid>
</Window>
